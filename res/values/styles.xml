<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/ctrl_pop_view_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="main_tab_bottom">

        <item name="android:textColor">@color/book_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>        

        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
            
    </style>        

    <style name="create_btn_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/create_btn_bg</item>
    </style>

    <style name="userinfo_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="selfinfo_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffff6600</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="more_font">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10.0dp</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    
    <style name="margin_set">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2.0dp</item>
    </style>

    <style name="more_triangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">15.0dp</item>
    </style>

    <style name="selfinfo_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/book_text_color</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="detail_bottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10.0sp</item>
        <item name="android:background">@drawable/create_btn_bg</item>
    </style>
    
    <style name="myCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
   </style>

    <style name="detail_sub_bt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selfinfo_selet_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="transDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
<style name="popwin_anim_style">  
     <item name="android:windowEnterAnimation">@anim/popup</item>  
    <item name="android:windowExitAnimation">@anim/hide</item>  
</style> 
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    	<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
	
	<style name="yyProgressDialog" parent="@style/CustomDialog">
		<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
	    <style name="NotifyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
