<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="44.0dip" android:gravity="center_vertical"
         android:background="@drawable/titlebar_bg_nor">
        <Button android:id="@+id/title_btn_back" android:layout_width="70dip"
        android:layout_height="fill_parent" 
        android:background="@drawable/title_btn_back"
        android:onClick="task_back"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="返回"
        android:layout_centerVertical="true"/>   
        <TextView android:id="@+id/titlebar_name"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true" android:textColor="#FF000000"
            android:textSize="18.0sp" 
            android:text="任务列表"/>
    </RelativeLayout>
    
    <ListView
        android:id="@+id/task"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:scrollingCache="false"
        android:dividerHeight="12dip"/>

</LinearLayout>