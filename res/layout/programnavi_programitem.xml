<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">
    <LinearLayout
        android:orientation="horizontal"
        style="@style/margin_set"
        android:background="@drawable/item_select_bg">
    <!-- 头像 -->

    <LinearLayout
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="2.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" 
        android:background="@drawable/selfinfo_selet_bg">

        <ImageView
            android:id="@+id/programnaviitem_channelimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/portrait_normal"
            android:src="@drawable/portrait" />

        <TextView
            android:id="@+id/programnaviitem_channelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginBottom="2dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="中央一套"
            android:textColor="@color/black"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="2.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/programnaviitem_curprogramname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:singleLine="true"
                android:layout_marginTop="0.0dip"
                android:text="暂无节目"
                android:textColor="#FF202020"
                android:textSize="16.0sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/programnaviitem_nexttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    
                    android:singleLine="true"
                    android:text="下一节目:"
                    android:textColor="#FF202020"
                    android:textSize="13.0sp"
                    />

                <TextView
                    android:id="@+id/programnaviitem_nextprogramname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="暂无节目"
                   
                    android:textSize="13.0sp"
                     />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/programnaviitem_sign_framelayout"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/programnaviitem_programsign"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/portrait_normal"
                android:layout_gravity="center"
                android:src="@drawable/green_button" />
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
