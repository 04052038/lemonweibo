<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">
    <LinearLayout
        style="@style/margin_set"
        android:background="@drawable/item_select_bg"
        android:orientation="horizontal">
    <!-- 头像 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tvuserview_usericon"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"
            android:background="@drawable/portrait_normal"
            android:paddingBottom="12.0dip"
            android:paddingRight="1.0dip"
            android:src="@drawable/usericon1" />

        <TextView
            android:id="@+id/tvuserview_username"
            android:layout_width="42.0dip"
            android:layout_height="12.0dip"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="5.0dip"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="10.0dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvuserview_pad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="正在看:"
                    android:textColor="#FF202020"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/tvuserview_channelname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:singleLine="true"
                    android:text="中央一套"
                    android:textColor="#FF202020"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvuserview_programname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:singleLine="true"
                    android:text="新闻联播"
                    android:textColor="#FF202020"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvuserview_programtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2012-09-12 08:00"
                    android:textColor="#FF202020"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tvuserview_book_framelayout"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="5.0dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/onlinetvview_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_attention"
                android:paddingBottom="0.0dip"
                android:paddingRight="0.0dip"
                android:text="签到" />

            <Button
                android:id="@+id/onlinetvview_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_attention"
                android:paddingBottom="0.0dip"
                android:paddingRight="0.0dip"
                android:text="预约"
                android:visibility="gone" />

            <Button
                android:id="@+id/onlinetvview_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_unattention"
                android:paddingBottom="0.0dip"
                android:paddingRight="0.0dip"
                android:text="取消"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>