<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffd7a9"
    android:orientation="vertical" 
    android:id="@+id/my_content_view">

    <include
        android:id="@+id/home_titlebar"
        layout="@layout/tvtitlebar" />

    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/programnavi_activity_CCTV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="央视"
            android:textColor="@color/red1"
            
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/programnavi_activity_SATE"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="卫视"
            android:textColor="@color/black"
            
            android:textSize="15.0dip"/>

        <TextView
            android:id="@+id/programnavi_activity_LOCAL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="本地"
            android:textColor="@color/black"
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/programnavi_activity_follow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/black"
            
            android:textSize="15.0dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffe7cc">
    <ImageView
        android:id="@+id/prog_cursor"
        android:contentDescription="cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/cursor" 
        />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/prog_pager"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#ffd7a9"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>