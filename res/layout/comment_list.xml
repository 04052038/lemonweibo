<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffd7a9">
	<LinearLayout android:layout_width="fill_parent" android:layout_height="44.0dip"
		android:orientation="horizontal" android:background="@drawable/titlebar_bg_nor">
		<Button android:id="@+id/commentList_title_back"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/title_back"/>
		<TextView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:gravity="center" android:text="@string/comment"
			android:textColor="#FFffffff" android:textSize="18.0sp" android:textStyle="bold"/>
		<Button android:id="@+id/commentList_title_comment"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/title_send"/>
	</LinearLayout>
	<com.star.weibo.xlist.XListView android:id="@+id/commentList_list"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:background="@drawable/weibo_first_login2"
		android:cacheColorHint="#00000000" android:divider="#00000000"
		android:fastScrollEnabled="true"
		android:focusable="true" android:scrollbars="none">
	</com.star.weibo.xlist.XListView>

</LinearLayout>
