<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/ctrl_pop_view_shape">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/pop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"           
                android:textColor="#D04509"
                android:textSize="18sp"
                android:text=""/>
            <Button
                android:visibility="gone"
                android:id="@+id/pop_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/close_normal"/>   
        </RelativeLayout>
        <View
             android:layout_width="fill_parent"
             android:layout_height="1dip"
             android:layout_marginTop="5dip"
             android:layout_marginLeft="10dip"
             android:layout_marginRight="10dip"
             android:background="#D04509" />
        <LinearLayout
            android:id="@+id/programnavi_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:visibility="gone">
        <Button
             android:id="@+id/programnavi_pop_checkin"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="18dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="换       台" />
        <Button
            android:id="@+id/programnavi_pop_detail"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="3dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="节目详情" 
             android:visibility="gone"/> 
        <Button
             android:id="@+id/programnavi_pop_next"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="3dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="节目预告" />
        <Button
             android:id="@+id/programnavi_pop_fav"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="3dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="收藏频道" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/msg_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:orientation="vertical"
            android:visibility="gone">
        <Button
             android:id="@+id/pop_item1"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="18dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="" />
        <Button
             android:id="@+id/pop_item2"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="3dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="" /> 
         <Button
             android:visibility="gone"
             android:id="@+id/pop_item3"
             android:background="@drawable/ctrl_pop_button_shape"
             android:layout_width="140dip"
             android:layout_height="35dip"
             android:layout_marginTop="3dip"
             android:layout_marginBottom="3dip"
             android:textSize="15dip"
             android:textColor="#fff"
             android:text="" />
         </LinearLayout>
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="15dip"
              android:background="#00ffffff">
          </LinearLayout>         

</LinearLayout>