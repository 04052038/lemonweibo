<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ctrl_mainLayout" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffd7a9"
    android:orientation="vertical" >

    <include layout="@layout/ctrl_header" />
        
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="5dip"
        android:textSize="18dip"
        android:textColor="#000000"
        android:text="@string/ctrl_prefecture_area"
        android:background="#D4D0C8" >
    </TextView>

    <ListView 
        android:id="@+id/ctrl_selectedpref_list" 
        android:descendantFocusability="blocksDescendants" 
        android:layout_marginTop="2dip"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="#ffd7a9"                 
        android:fastScrollEnabled="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="2dip"
        android:paddingLeft="5dip"
        android:textSize="18dip"
        android:textColor="#000000"
        android:text="@string/ctrl_prefecture_operator"
        android:background="#D4D0C8" >
    </TextView>

    <ListView 
        android:id="@+id/ctrl_operator_list" 
        android:descendantFocusability="blocksDescendants" 
        android:layout_marginTop="2dip"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="#ffd7a9"                
        android:fastScrollEnabled="false" />
</LinearLayout>